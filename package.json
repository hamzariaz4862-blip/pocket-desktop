{
  "name": "pocket-desktop",
  "version": "1.0.0",
  "description": "Desktop trading demo wrapper",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dist:mac": "electron-builder --mac dmg"
  },
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^24.13.3"
  },
"build": {
  "appId": "com.pocketdesktop.trading",
  "productName": "PocketOptionDesktop",
  "copyright": "Â© 2026 Pocket Desktop",

  "artifactName": "PocketOptionDesktop-${version}-${os}-${arch}.${ext}",

  "mac": {
    "target": ["dmg"],
    "icon": "icon.icns",
    "identity": null
  },

  "dmg": {
    "title": "PocketOptionDesktop"
  },

  "win": {
    "icon": "icon.ico",
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "signAndEditExecutable": false
  },

  "nsis": {
    "oneClick": true,
    "perMachine": false,
    "allowToChangeInstallationDirectory": false
  }
}
}
